<LinearLayout
    android:id="@+id/mpsdkPaymentMethodLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="45dp"
    android:background="@color/mpsdk_white_background"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:layout_height="@dimen/mpsdk_list_item_height"
        android:weightSum="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="0.98"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/mpsdkImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    tools:src="@drawable/amex"
                    android:adjustViewBounds="true"
                    android:maxHeight="20dp"/>
                <com.mercadopago.views.MPTextView
                    android:id="@+id/mpsdkDescription"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/mpsdkImage"
                    android:layout_toRightOf="@+id/mpsdkImage"
                    tools:text="@string/mpsdk_last_digits_label"
                    android:textSize="18dp"
                    android:textColor="@color/mpsdk_base_text"/>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/mpsdkEditHint"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/arrow_right"
            android:adjustViewBounds="true"/>
    </LinearLayout>
    <View
        android:id="@+id/mpsdkSeparator"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mpsdk_separator"/>
</LinearLayout>